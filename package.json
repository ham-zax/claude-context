{
    "name": "satori",
    "version": "0.1.4",
    "description": "Satori: focused code indexing engine + MCP integration",
    "private": true,
    "scripts": {
        "build": "pnpm -r build",
        "build:core": "pnpm --filter @zokizuan/satori-core build",
        "build:mcp": "pnpm --filter @zokizuan/satori-mcp build",
        "dev": "pnpm -r dev",
        "dev:core": "pnpm --filter @zokizuan/satori-core dev",
        "dev:mcp": "pnpm --filter @zokizuan/satori-mcp dev",
        "clean": "pnpm -r clean",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r run lint:fix",
        "typecheck": "pnpm -r run typecheck",
        "release:core": "pnpm --filter @zokizuan/satori-core... run build && pnpm --filter @zokizuan/satori-core publish --access public --no-git-checks",
        "release:mcp": "pnpm --filter @zokizuan/satori-mcp... run build && pnpm --filter @zokizuan/satori-mcp publish --access public --no-git-checks",
        "test:integration": "pnpm --filter @zokizuan/satori-core run test:integration",
        "benchmark": "node scripts/build-benchmark.js"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "eslint": "^9.25.1",
        "https-browserify": "^1.0.0",
        "os-browserify": "^0.3.0",
        "rimraf": "^6.0.1",
        "stream-http": "^3.2.0",
        "typescript": "^5.8.3",
        "tree-sitter-cli": "^0.25.6",
        "url": "^0.11.4",
        "vm-browserify": "^1.1.2"
    },
    "packageManager": "pnpm@10.28.2",
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ham-zax/claude-context.git"
    },
    "homepage": "https://github.com/ham-zax",
    "bugs": {
        "url": "https://github.com/ham-zax/claude-context/issues"
    },
    "license": "MIT",
    "author": "ham-zax"
}
