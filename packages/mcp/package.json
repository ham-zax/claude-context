{
    "name": "@zokizuan/claude-context-mcp",
    "version": "1.0.0",
    "description": "Model Context Protocol integration for Claude Context",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/index.js",
    "scripts": {
        "build": "pnpm clean && tsc --build --force && pnpm docs:generate",
        "dev": "tsx --watch src/index.ts",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "start": "tsx src/index.ts",
        "start:with-env": "OPENAI_API_KEY=${OPENAI_API_KEY:your-api-key-here} MILVUS_ADDRESS=${MILVUS_ADDRESS:localhost:19530} tsx src/index.ts",
        "docs:generate": "tsx scripts/generate-docs.ts",
        "docs:check": "tsx scripts/generate-docs.ts --check",
        "prepublishOnly": "pnpm build && pnpm docs:check",
        "test": "tsx --test --test-concurrency=1 src/**/*.test.ts"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.12.1",
        "@zokizuan/claude-context-core": "workspace:*",
        "ignore": "^7.0.5",
        "zod": "^3.25.55",
        "zod-to-json-schema": "^3.25.1"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "tsx": "^4.19.4",
        "typescript": "^5.0.0"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ham-zax/claude-context.git",
        "directory": "packages/mcp"
    },
    "homepage": "https://github.com/ham-zax/claude-context",
    "bugs": {
        "url": "https://github.com/ham-zax/claude-context/issues"
    },
    "author": "ham-zax",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    }
}
